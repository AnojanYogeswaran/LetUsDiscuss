<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.letus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_lud_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_lud_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LetUs">
        <activity
            android:name="com.example.letusdiscuss.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.SignInFragment"
           >
        </activity>
        <activity
            android:name=".fragments.ProfileFragment"
            >
        </activity>
        <activity
            android:name=".fragments.MessageFragment"
            >
        </activity>
    </application>

</manifest>