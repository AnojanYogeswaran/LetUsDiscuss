<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creamBlue"
    android:clipToOutline="true" >


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="396dp"
        android:layout_height="196dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="254dp"
        android:gravity="center_horizontal|top"
        android:text="@string/sign_in"
        android:textAppearance="@style/sign_in" />

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="320dp"
        android:layout_weight="1"
        android:background="@drawable/login"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#A0A0A0" />

    <EditText
        android:id="@+id/password"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="388dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/login"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#A0A0A0" />


    <Button
        android:id="@+id/logAcc"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="401dp"
        android:layout_marginBottom="182dp"
        android:backgroundTint="#5271FF"
        android:text="Log in" />

    <Button
        android:id="@+id/intentSignUp"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="401dp"
        android:layout_marginBottom="121dp"
        android:backgroundTint="#5271FF"
        android:text="Create Account" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="220dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="624dp"
        android:gravity="center_horizontal|top"
        android:text="@string/forgot_pass"
        android:textAppearance="@style/forgot_pass" />


</RelativeLayout>