<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/EmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintLeft_toLeftOf="@+id/welcome"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/EmailTitle"
        app:layout_constraintLeft_toLeftOf="@+id/EmailTitle"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/LoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/EmailTitle"
        app:layout_constraintLeft_toLeftOf="@+id/welcome"
        android:text="Username :"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LoginTitle"
        app:layout_constraintLeft_toLeftOf="@+id/EmailTitle"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/birthdateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintLeft_toLeftOf="@+id/LoginTitle"
        android:layout_marginTop="20dp"
        android:text="Age :"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/birthdateTitle"
        app:layout_constraintLeft_toLeftOf="@+id/LoginTitle"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/buttonDeco"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_marginTop="424dp"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="@+id/LoginTitle"
        app:layout_constraintTop_toBottomOf="@+id/birthdateTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>